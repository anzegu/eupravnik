<%= simple_form_for(@channel) do |f| %>
  <%= f.error_notification %>

 <div class="field">
   <div class="control">
        <%= f.input :channel, input_html: { class: 'input channel_input_width' }, wrapper: false, label_html: { class: 'label' } %>
        <h6 class="title is-7">Max characters is 30.</h6>
   </div>
 </div>

 <%= f.button :submit, class: 'button is-info' %>
<% end %>